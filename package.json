    "express": "^4.17.1",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.12",
    "nodemon": "^2.0.15"
  },
  "engines": {
    "node": "v15.4.0",
    "npm": "7.0.15"
  }
}
